# Indicate this is the root EditorConfig file
root = true

# Global settings for all files
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Default indentation settings
indent_style = space
indent_size = 4

# Makefile-specific settings
[Makefile]
indent_style = tab

# Python-specific settings
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79  # PEP 8 compliance

# C++ source and header files
[*.{cpp,hpp,c,h}]
indent_style = space
indent_size = 4
tab_width = 4

# CMakeLists.txt and *.cmake files
[*.cmake]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

[CMakeLists.txt]
indent_style = space
indent_size = 2
tab_width = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Ignore large files (over 1MB)
[*.{log,txt}]
max_line_length = off
trim_trailing_whitespace = false

